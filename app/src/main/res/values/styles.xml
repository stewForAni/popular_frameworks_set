<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <!--<item name="android:fitsSystemWindows">true</item>-->

        <item name="android:windowBackground">@color/init_app_bg_transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!--init app with a drawable-->
    <style name="initAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/init_app_bg</item>
    </style>

    <!--login-->
    <style name="login_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
    </style>

    <style name="toolbar">
        <item name="android:textColor">@color/dark_level_1</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
