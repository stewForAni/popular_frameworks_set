<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_fragment_search_bar_height"
        android:layout_marginLeft="@dimen/main_fragment_search_bar_ml"
        android:layout_marginTop="@dimen/main_fragment_search_bar_mt"
        android:layout_marginRight="@dimen/main_fragment_search_bar_mr"
        android:background="@drawable/main_fragment_search_bar_bg"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/main_fragment_search_bar_height"
            android:layout_height="@dimen/main_fragment_search_bar_height"
            android:padding="10dp"
            android:src="@drawable/main_tab_icon_search" />

        <EditText
            android:id="@+id/main_fragment_editText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/main_fragment_edit_mr"
            android:background="@color/color_white"
            android:hint="@string/search_for_something"
            android:maxLength="20"
            android:textColorHint="@color/dark_level_3p5"
            android:textSize="@dimen/main_fragment_search_ts" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/fragment_layout_mt">

        <com.stew.new_stew.widget.BannerPager
            android:id="@+id/banner_pager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_fragment_banner_height"
            android:background="@color/dark_level_1" />

        <ImageView
            android:scaleType="centerCrop"
            android:layout_marginTop="200dp"
            android:id="@+id/test_image"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

    </RelativeLayout>

</RelativeLayout>