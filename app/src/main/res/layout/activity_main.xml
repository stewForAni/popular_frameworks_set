<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_layout_def"
    tools:context=".ui.activity.MainActivity">


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/top_bar_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/main_bottom_tab_height">

                <android.support.v4.view.ViewPager
                    android:id="@+id/main_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color_white" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_shadow_view_height"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/shadow_top" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_shadow_view_height"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/shadow_bottom" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_bottom_tab_height"
            android:layout_alignParentBottom="true"
            android:background="@color/color_white"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/main_tab_ll_home"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/main_tab_iv_home"
                    style="@style/main_tab_icon_style"
                    android:src="@drawable/main_tab_icon_home" />

                <TextView
                    android:id="@+id/main_tab_tx_home"
                    style="@style/main_tab_text_style"
                    android:text="Home" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_tab_ll_lesson"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/main_tab_iv_lesson"
                    style="@style/main_tab_icon_style"
                    android:src="@drawable/main_tab_icon_lesson" />

                <TextView
                    android:id="@+id/main_tab_tx_lesson"
                    style="@style/main_tab_text_style"
                    android:text="Lesson" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/main_tab_ll_me"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/main_tab_iv_me"
                    style="@style/main_tab_icon_style"
                    android:src="@drawable/main_tab_icon_me" />

                <TextView
                    android:id="@+id/main_tab_tx_me"
                    style="@style/main_tab_text_style"
                    android:text="Me" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>